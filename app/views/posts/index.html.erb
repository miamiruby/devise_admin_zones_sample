<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr style="border:1px solid red">
      <th style="border:1px solid red">Title</th>
      <th style="border:1px solid red">Body</th>
      <th style="border:1px solid red">User</th>
      <th colspan="3" style="border:1px solid red"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td>
            <%= link_to 'Destroy', post, method: :delete, data: {remote: true, confirm: 'Are you sure?'}, class: 'delete-post' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
